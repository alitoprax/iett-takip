{
    "version": 2,
    "builds": [
        {
            "src": "server.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/:match*",
            "destination": "/server.py"
        },
        {
            "source": "/mobile",
            "destination": "/index.html"
        },
        {
            "source": "/mobil",
            "destination": "/index.html"
        },
        {
            "source": "/(?!api).*",
            "destination": "/public/$0"
        }
    ]
}